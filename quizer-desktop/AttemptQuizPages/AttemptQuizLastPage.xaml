<Page x:Class="quizer_desktop.AttemptQuizPages.AttemptQuizLastPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quiz Results" Background="#F0F0F0">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Quiz Completed!" FontSize="30" FontWeight="Bold"
                   Foreground="#0078D7" HorizontalAlignment="Center"/>

        <!-- Score Label -->
        <TextBlock Grid.Row="1" Text="You Scored:" FontSize="22"
                   VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,5"/>

        <!-- Score Value -->
        <TextBlock x:Name="ScoreBox" Grid.Row="2" Text="Score" FontSize="50"
                   FontWeight="Bold" Foreground="Black"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <!-- Time Taken -->
        <TextBlock x:Name="TimeTakenBox" Grid.Row="3" Text="Time Taken: --" FontSize="18"
                   Foreground="Gray" Margin="0,15,0,0"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Page>
