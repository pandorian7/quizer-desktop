<Page x:Class="quizer_desktop.AttemptQuizPages.AttemptQuizFrontPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AttemptQuizFrontPage">

    <Grid Background="#F0F0F0" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Quiz Title -->
        <TextBlock x:Name="QuizTitleLabel" 
                   Text="Quiz Title" 
                   FontSize="36" FontWeight="Bold" 
                   Foreground="#333" 
                   HorizontalAlignment="Center" 
                   TextWrapping="Wrap"
                   Margin="0,10,0,20"/>

        <!-- Quiz Description -->
        <TextBlock x:Name="QuizDescriptionLabel" 
                   Text="Quiz Description" 
                   FontSize="22" 
                   Foreground="#444" 
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="20,0,20,20" 
                   Grid.Row="1"/>

        <!-- Quiz Points -->
        <TextBlock x:Name="QuizPointsLabel" 
                   Text="Quiz Points" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Foreground="#555"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20" 
                   Grid.Row="2"/>

        <!-- Attempt Button -->
        <Button x:Name="AttemptBtn" 
                Content="Attempt Now" 
                FontSize="26" 
                FontWeight="Bold" 
                Background="#0078D7" 
                Foreground="White" 
                Padding="15" 
                Width="300"
                HorizontalAlignment="Center"
                BorderThickness="0"
                Cursor="Hand"
                Grid.Row="3"
                Click="AttemptBtn_Click"/>

    </Grid>
</Page>
