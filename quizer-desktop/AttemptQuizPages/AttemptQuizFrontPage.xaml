<Page x:Class="quizer_desktop.AttemptQuizPages.AttemptQuizFrontPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:quizer_desktop.AttemptQuizPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AttemptQuizFrontPage">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="QuizTitleLabel" Grid.Row="0" Text="Quiz Title" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" TextWrapping="Wrap"/>
        <TextBlock x:Name="QuizDescriptionLabel" Grid.Row="1" Text="Quiz Description" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" TextWrapping="Wrap"/>
        <TextBlock x:Name="QuizPointsLabel" Grid.Row="2" Text="Quiz Points" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" TextWrapping="Wrap"/>
        <Button x:Name="AttemptBtn" Grid.Row="3" FontSize="30" Margin="160,15,160,15" Click="AttemptBtn_Click">Attempt Now</Button>
    </Grid>
</Page>
