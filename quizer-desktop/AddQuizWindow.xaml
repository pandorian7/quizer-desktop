<Window x:Class="quizer_desktop.AddQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Quiz" Height="245" Width="450" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Background="#F0F0F0">

    <Grid Margin="20">
        <!-- Title Label -->
        <TextBlock Text="Quiz Title" FontSize="20" FontWeight="Bold"
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <!-- Title Input -->
        <TextBox x:Name="QuizTitle" Height="60" Margin="0,0,0,20"
                 Padding="10" FontSize="16" TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Save Button -->
        <Button x:Name="QuizAddButton" Content="Save" FontSize="18" FontWeight="Bold"
                Background="#0078D7" Foreground="White" Padding="12"
                Margin="0,120,0,0" Width="Auto" Height="50" Cursor="Hand"
                Click="QuizAddButton_Click"/>
    </Grid>
</Window>
